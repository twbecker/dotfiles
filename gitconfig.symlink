[include]
    path = ~/.gitlocalconfig
[merge]
	tool = p4merge
[diff]
	tool = p4merge
	submodule = log
[core]
	excludesfile = ~/.gitignore
[rebase]
	autosquash = true
	autostash = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an>%Creset' --abbrev-commit
	st = status -s
[svn]
	rmdir = true
	pushmergeinfo = true
[pull]
	rebase = true
[log]
	date = local
[status]
	submoduleSummary = true
